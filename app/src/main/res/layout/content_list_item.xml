<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/distance_bas"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:onClick="Go"    >

    <TextView
        android:id="@+id/disponible"
        android:text="TextView"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/champ"
        android:layout_below="@+id/Etat" />

    <TextView
        android:id="@+id/Latitute"
        android:text="Y="
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/Long"
        android:layout_alignEnd="@+id/Long" />

    <TextView
        android:id="@+id/lblDispo"
        android:layout_width="90dp"
        android:layout_height="@dimen/champ"
        android:text="Places disp. :"
        android:layout_below="@+id/Etat"
        android:layout_toLeftOf="@+id/disponible"
    />

    <TextView
        android:id="@+id/Long"
        android:text="x = "
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:layout_alignTop="@+id/libelle"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/Etat"
        android:text="TextView"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/champ"
        android:layout_alignParentRight="true"
        android:textColor="@color/cast_expanded_controller_background_color"
        />

    <TextView
        android:id="@+id/distance"
        android:text="TextView"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/champ"
        android:textSize="16sp"
        android:layout_below="@+id/disponible" />

    <TextView
        android:id="@+id/libelle"
        android:layout_width="250dp"
        android:layout_height="@dimen/champ"
        android:layout_marginTop="0dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="libelle"
        android:layout_below="@+id/disponible"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/ville"
        android:paddingBottom="2dip"
        android:layout_width="200dp"
        android:layout_marginBottom="0dp"
        android:layout_height="@dimen/champ"
        android:layout_marginLeft="70dp"
        android:textSize="20sp"
        android:textColor="#5d5d5d"
        android:textStyle="bold"
        android:text="ville" />

    <TextView
        android:id="@+id/adresse"
        android:layout_width="match_parent"
        android:layout_height="@dimen/champ"
        android:paddingBottom="2dip"
        android:textColor="@color/colorAccent"
        android:text="adresse"
        android:layout_marginTop="99dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/distance"/>

    <ImageView
        app:srcCompat="@drawable/cast_abc_scrubber_control_off_mtrl_alpha"
        android:id="@+id/imgparking"
        android:src="@drawable/icon_parking"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toLeftOf="@id/ville"
        android:layout_toRightOf="@+id/Latitute"
        android:layout_toEndOf="@+id/Latitute" />

</RelativeLayout>
